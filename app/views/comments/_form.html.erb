<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="labeled-control">
    <div>
        <%= form.label :commenter %>
    </div>
    <div>
        <%= form.text_field :commenter, style:"width: 40%"%>
    </div>
  </div>

  <div class="labeled-control">
    <div>
        <%= form.label :body %>
    </div>
    <div>
        <%= form.text_area :body, style:"width: 40%; height: 80px;" %>
    </div>
  </div>

  <div class="labeled-control">
    <div>
       <%= form.label :status %>
    </div>
    <div>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div>
  </div>

  <div class="labeled-control">
    <%= form.submit %>
  </div>
  
<% end %>